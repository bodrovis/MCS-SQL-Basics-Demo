<h1 class="main-title">Редактировать пользователя</h1>

<%= form_with url: user_path(@user['id']), data: {remote: false}, method: :patch do %>
  <div class="form-group row">
    <div class="col-3">
      <%= label_tag 'name', 'Имя', class: 'custom-label' %>
    </div>

    <div class="col-9">
      <%= text_field_tag 'name', @user['name'], placeholder: 'Вася', class: 'custom-input' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-3">
      <%= label_tag 'surname', 'Фамилия', class: 'custom-label' %>
    </div>

    <div class="col-9">
      <%= text_field_tag 'surname', @user['surname'], placeholder: 'Пупкин', class: 'custom-input' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-3">
      <%= label_tag 'age', 'Возраст', class: 'custom-label' %>
    </div>

    <div class="col-9">
      <%= text_field_tag 'age', @user['age'], placeholder: '33', class: 'custom-input' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-3">
      <%= label_tag 'city', 'Город', class: 'custom-label' %>
    </div>

    <div class="col-9">
      <%= text_field_tag 'city', @user['city'], placeholder: 'Москва', class: 'custom-input' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-3">
      <%= label_tag 'university', 'Универ', class: 'custom-label' %>
    </div>

    <div class="col-9">
      <%= text_field_tag 'university', @user['university'], placeholder: 'МГУ', class: 'custom-input' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-3">
      <%= label_tag 'language_id', 'Язык', class: 'custom-label' %>
    </div>

    <div class="col-9">
      <%= select_tag 'language_id', language_options(@user['language_id'], @languages), class: 'custom-input',
                     prompt: 'Выберите язык' %>
    </div>
  </div>

  <%= submit_tag 'Редактировать!', class: 'btn btn-primary btn-block mt-4' %>
<% end %>